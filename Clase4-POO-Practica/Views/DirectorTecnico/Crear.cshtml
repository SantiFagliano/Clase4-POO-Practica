@model Entidades.DirectorTecnico
@{
    List<Entidades.Arquero> arqueros = ((List<Entidades.Arquero>)ViewData["Arqueros"]);
    List<Entidades.Delantero> delanteros = ((List<Entidades.Delantero>)ViewData["Delanteros"]);
}
<div class="container">
    <h3 class="text-center mt-4">Director Tecnico</h3>
    <form action="/DirectorTecnico/Crear" method="post" class="form-dt">
        <div class="mb-4">
            <label class="form-label" for="NombreUsuario">Nombre del DT:</label>
            <input type="text" name="NombreUsuario" value="" id="NombreUsuario" class="form-control" placeholder="Ingresar nombre del DT"/>
        </div>
        <div class="mb-4">
            <label class="form-label" for="Arquero.Id">Elija al Arquero:</label>
            <select name="Arquero.Id" id="Arquero.Id" class="form-select">
                <option value="0" selected disabled>Seleccione una opcion</option>
                @foreach (Entidades.Arquero arq in arqueros)
                {
                    <option value="@arq.Id">@arq.Nombre @arq.Apellido</option>
                }
            </select>
        </div>
        <div class="mb-4">
            <label class="form-label" for="Delantero1.Id">Elija al primer Delantero:</label>
            <select name="Delantero1.Id" id="Delantero1.Id" class="form-select">
                <option value="0" selected disabled>Seleccione una opcion</option>
                @foreach (Entidades.Delantero del in delanteros)
                {
                    <option value="@del.Id">@del.Nombre @del.Apellido</option>
                }
            </select>
        </div>
        <div class="mb-4">
            <label class="form-label" for="Delantero2.Id">Elija al segundo Delantero:</label>
            <select name="Delantero2.Id" id="Delantero2.Id" class="form-select">
                <option value="0" selected disabled>Seleccione una opcion</option>
                @foreach (Entidades.Delantero del in delanteros)
                {
                    <option value="@del.Id">@del.Nombre @del.Apellido</option>
                }
            </select>
        </div>
        <div class="text-center">
            <button class="btn btn-lg btn-outline-success btn-block text-uppercase" type="submit" name="name">
                Crear
            </button>
        </div>
    </form>
</div>